<ion-header>
  <ion-toolbar color="dark">
    <ion-title class="opensansfontregular">Add Accolades</ion-title>
    <ion-buttons slot="end">
      <ion-col (click)="submitAccoladeDetails()" style="padding-right: 15px;"><i class="lni-save"></i>
      </ion-col>
    </ion-buttons>
  </ion-toolbar>
</ion-header>

<ion-content no-padding class="background opensansfontregular">
  <ion-grid class="textfontsize">
    <ion-row no-padding>
      <ion-col size='12' no-padding>
        <ion-item class="opensansfontregular" (click)="toggleItem(1)">
          <ion-label>Category :{{selectedAccolade}}</ion-label>
        </ion-item>
        <ion-list *ngIf="showGroup1" class="opensansfontregular">
          <ion-radio-group>
            <ion-item *ngFor="let obj of objArr" (click)="toggleItem(1)" (click)="selectAccolade($event.target.value)">
              <ion-label>{{obj}}</ion-label>
              <ion-radio slot="start" [value]="obj" checked></ion-radio>
            </ion-item>
          </ion-radio-group>
        </ion-list>
      </ion-col>
    </ion-row>
    <ion-row no-padding>
      <ion-col size='12' no-padding>
        <ion-item class="opensansfontregular" (ionChange)="selectIntExt($event.target.value)">
          <ion-label>Internal/External</ion-label>
          <ion-select placeholder="Select Date" okText="OK" cancelText="Close">
            <ion-select-option value="Internal">Internal</ion-select-option>
            <ion-select-option value="External">External</ion-select-option>
          </ion-select>
        </ion-item>
      </ion-col>
    </ion-row>
    <ion-row no-padding>
      <ion-col size='12' no-padding>
        <ion-item class="opensansfontregular" (ionChange)="selectDate($event.target.value)">
          <ion-label>Date</ion-label>
          <ion-datetime placeholder="Select Date" display-format="MMM DD, YYYY "></ion-datetime>
        </ion-item>
      </ion-col>
    </ion-row>
    <ion-row no-padding>
      <ion-col size='12' no-padding>
        <ion-item class="opensansfontregular" (ionChange)="selectDescription(selectedDescription)">
          <ion-label position="floating">Description</ion-label>
          <ion-textarea [(ngModel)]="selectedDescription"></ion-textarea>
        </ion-item>
      </ion-col>
    </ion-row>
    <ion-row>
      <ion-col offset="8" size="4" style="height:32px;font-size: 16px;text-align: right;" (click)="addAccolade()">
        <u>+Add Accolade</u>
      </ion-col>
    </ion-row>
    <ion-row class="page-header-style">
      <ion-col size='3' class="column-style">Category</ion-col>
      <ion-col size='3' class="column-style">Int/Ext</ion-col>
      <ion-col size='3' class="column-style">Date Name</ion-col>
      <ion-col size='3' class="column-style">Details</ion-col>
    </ion-row>
    <ion-row *ngFor="let accolade of accoladesArr">
      <ion-col size='3'>
        {{accolade.category}}
      </ion-col>
      <ion-col size='3' class="centeralign">
        {{accolade.internal_external}}
      </ion-col>
      <ion-col size='3' class="centeralign">
        {{accolade.date_acc_received}}
      </ion-col>
      <ion-col size='3'>
        {{accolade.acc_details}}
      </ion-col>
    </ion-row>
  </ion-grid>
</ion-content>